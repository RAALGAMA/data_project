<li class="message-header"><%= game.name %></li>

  <li class="message is-dark">
    <div class="message-header">
      <strong>Rank:</strong>
    </div>
    <div class="message-body">
      <%= game.rank %>
    </div>
  </li>

  <li class="message is-dark">
    <div class="message-header">
      <p>Genre:</p>
    </div>
    <div class="message-body">
      <%= game.genre %>
    </div>
  </li>

  <li class="message is-dark">
    <div class="message-header">
      <p>Console:</p>
    </div>
    <div class="message-body">
      <%= link_to game.platform.name, plataform_path(game.platform) %>
    </div>
  </li>

  <li class="message is-dark">
    <div class="message-header">
      <p>Sales:</p>
    </div>
    <div class="message-body">
      Sales in North America (in millions): <%= game.sales %> <br>
      Sales in North Europe (in millions): <%= game.sales %> <br>
      Sales in North Japan (in millions): <%= game.sales %>  <br>
      Other Sales (in millions):  <%= game.sales %>          <br>
      Global Sales (in millions): <%= game.sales %>          <br>
    </div>
  </li>